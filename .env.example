# === SandboxMCP базовые настройки ===
PROJECT_NAME=SandboxMCP
# Контакт для Auto-SSL (Caddy/Let's Encrypt)
ACME_EMAIL=admin@example.com

# Основные домены (укажите реальные DNS-записи; по умолчанию локальные)
SANDBOX_DOMAIN=sandbox.localhost
NOVNC_DOMAIN=novnc.sandbox.localhost
API_DOMAIN=api.sandbox.localhost

# Базовая защита noVNC/служебных панелей
BASIC_AUTH_USER=viewer
# Сгенерируйте хэш: caddy hash-password --plaintext 'ваш_пароль'
BASIC_AUTH_PASS=$$2a$$14$$OX2OWw9W9FcS/PjwoCYbDeTNLzYVpWd2PA0GiWq9Z8Ey.ZBc6TA5.

# Каталоги проекта (расположен в /root/sandboxmcp)
PROJECT_ROOT=/root/sandboxmcp
POLICY_DIR=${PROJECT_ROOT}/policy
CADDY_DIR=${PROJECT_ROOT}/caddy
CADDYFILE_PATH=${CADDY_DIR}/Caddyfile
POLICY_FILE=/app/policy/decision.yaml
FASTAPI_ROOT=${PROJECT_ROOT}/fastapi-app

# Системные сервисы (systemd units)
SYSTEMD_UNITS="xvfb.service openbox.service x11vnc.service novnc.service cua-computer.service"

# Параметры FastAPI
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8100
FASTAPI_HEALTH_ENDPOINT=/health

# Параметры CUA Computer Server
COMPUTER_SERVER_HOST=host.docker.internal
COMPUTER_SERVER_PORT=8000
COMPUTER_SERVER_DISPLAY=:1
COMPUTER_SERVER_HEALTH_ENDPOINT=/health

# SSH алиасы (см. /root/.ssh/config)
SSH_ALIAS_DEV=dev
SSH_ALIAS_SANDBOX=sandbox

# Playwright / Node tooling
PLAYWRIGHT_GLOBAL_PACKAGES="@playwright/test @playwright/mcp"
PLAYWRIGHT_INSTALL_CMD="npx playwright install && npx playwright install-deps"

# Telegram MCP локальный путь
TELEGRAM_MCP_DIR=${PROJECT_ROOT}/telegram-mcp

# Telegram MCP credentials (shared для MCP и CLI)
TELEGRAM_API_ID=
TELEGRAM_API_HASH=
TELEGRAM_SESSION_NAME=telegram_session
TELEGRAM_SESSION_STRING=

# Trigger.dev CLI
TRIGGER_GLOBAL_PACKAGE=@trigger.dev/sdk

# Ограничения VDS2 (для документации/мониторинга)
VDS2_DISK_LIMIT_GB=60
VDS2_RAM_LIMIT_GB=4
VDS2_CPU_CORES=2

# Визуальное окружение (опционально)
ENABLE_VISUAL=auto           # auto|true|false
DISPLAY_NUM=:1
NOVNC_LISTEN=127.0.0.1
NOVNC_PORT=6080
VNC_PORT=5901
QT_OPENGL=software
LIBGL_ALWAYS_SOFTWARE=1
CHROMIUM_FLAGS="--disable-gpu --no-sandbox --disable-dev-shm-usage"
